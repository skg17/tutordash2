<!-- Sidebar Content -->
<aside id="sidebar" class="sidebar w-64 fixed top-0 left-0 h-full text-white p-6 z-40 transform -translate-x-full md:translate-x-0 flex flex-col transition-transform duration-300">
    <h1 class="text-2xl font-extrabold mb-10 tracking-wider">TutorTrack</h1>
    
    <div class="mb-8">
        <p class="text-xs uppercase text-gray-400 font-semibold mb-3">Navigation</p>
        <nav>
            
            <%# Dashboard Link %>
            <%= link_to root_path, class: "flex items-center p-3 rounded-xl mb-2 text-gray-300 hover:bg-gray-700 text-sm transition duration-150" do %>
                <div class="icon mr-3" data-lucide="layout-dashboard" style="width: 18px; height: 18px;"></div>
                Dashboard
            <% end %>

            <%# Students Link %>
            <%= link_to students_path, class: "flex items-center p-3 rounded-xl mb-2 text-gray-300 hover:bg-gray-700 text-sm transition duration-150" do %>
                <div class="icon mr-3" data-lucide="users" style="width: 18px; height: 18px;"></div>
                Students
            <% end %>

            <%# Lessons Link (Active link example - apply the active class based on current page) %>
            <%= link_to lessons_path, class: "flex items-center p-3 rounded-xl mb-2 text-gray-300 hover:bg-gray-700 text-sm transition duration-150" do %>
                <div class="icon mr-3" data-lucide="book-open" style="width: 18px; height: 18px;"></div>
                Lessons
            <% end %>

        </nav>
    </div>
    
</aside>
