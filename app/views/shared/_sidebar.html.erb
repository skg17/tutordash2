<aside id="sidebar" class="sidebar w-64 fixed top-0 left-0 h-full text-white p-6 z-40 
       transform -translate-x-full md:translate-x-0 flex flex-col justify-between 
       transition-transform duration-300 bg-[#180337]"> 

    <%# 1. TOP & MIDDLE CONTENT WRAPPER %>
    <div class="flex flex-col">
        <h1 class="text-2xl font-extrabold mb-10 tracking-wider">TutorDash</h1>
        
        <div class="mb-8">
            <p class="text-xs uppercase text-gray-400 font-semibold mb-3">Navigation</p>
            <nav>
                
                <%# Dashboard Link %>
                <%= link_to root_path, class: "flex items-center p-3 rounded-xl mb-2 text-gray-300 hover:bg-gray-700 text-sm transition duration-150" do %>
                    <div class="icon mr-3" data-lucide="layout-dashboard" style="width: 18px; height: 18px;"></div>
                    Dashboard
                <% end %>

                <%# Students Link %>
                <%= link_to students_path, class: "flex items-center p-3 rounded-xl mb-2 text-gray-300 hover:bg-gray-700 text-sm transition duration-150" do %>
                    <div class="icon mr-3" data-lucide="users" style="width: 18px; height: 18px;"></div>
                    Students
                <% end %>

                <%# Lessons Link %>
                <%= link_to lessons_path, class: "flex items-center p-3 rounded-xl mb-2 text-gray-300 hover:bg-gray-700 text-sm transition duration-150" do %>
                    <div class="icon mr-3" data-lucide="book-open" style="width: 18px; height: 18px;"></div>
                    Lessons
                <% end %>

            </nav>
        </div>
    </div>
    
    <%# 2. BOTTOM USER PROFILE & SIGN OUT SECTION %>
    <% if current_user %>
        <div class="pt-6 border-t border-gray-700"> 
            
            <%# User Info (Name and Email) %>
            <div class="flex items-center mb-4 p-2">
                <div class="icon text-purple-300 bg-gray-700 p-2 rounded-full mr-3" data-lucide="user" style="width: 40px; height: 40px;"></div>
                
                <div>
                    <p class="font-semibold text-gray-100"><%= current_user.email.split('@').first.capitalize %></p>
                    <p class="text-xs text-gray-400"><%= current_user.email %></p>
                </div>
            </div>

            <%# Sign Out Button with Icon %>
            <%= button_to logout_path, method: :delete, 
                class: "flex items-center p-3 rounded-xl w-full text-sm text-gray-300 hover:bg-gray-700 transition duration-150" do %>
                <div class="icon mr-3" data-lucide="log-out" style="width: 18px; height: 18px;"></div>
                Sign Out
            <% end %>
        </div>
    <% end %>
</aside>