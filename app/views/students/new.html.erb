<section class="mb-8">
    <%= link_to students_path, class: "flex items-center text-lg font-semibold text-gray-700 hover:text-purple-600 transition duration-150 mb-4" do %>
        <div class="icon mr-2" data-lucide="arrow-left" style="width: 20px; height: 20px;"></div>
        <span class="text-sm uppercase tracking-wider">Back to Students</span>
    <% end %>

    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-1">Add New Student</h1>
    <p class="text-gray-500">Fill in the details to add a new student.</p>
</section>

<%# Render the form partial, passing the @student instance and custom submit text %>
<%= render 'form', student: @student, submit_text: "Add Student" %>