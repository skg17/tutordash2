<section class="flex flex-col md:flex-row justify-between md:items-center mb-8 space-y-4 md:space-y-0 md:pt-0">
    <div>
        <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-1">Students</h1>
        <p class="text-gray-500">Manage your student roster.</p>
    </div>
    
    <%# NEW LESSON BUTTON - w-full on mobile, shrinks on desktop, centered content %>
    <%= link_to new_student_path, class: "flex items-center justify-center w-full md:w-auto px-4 md:px-6 py-2 md:py-3 bg-purple-600 text-white font-semibold rounded-xl shadow-lg hover:bg-purple-700 transition duration-150 text-sm md:text-base" do %>
        <div class="icon mr-2" data-lucide="plus" style="width: 20px; height: 20px;"></div>
        <span class="hidden sm:inline">Add Student</span>
        <span class="sm:hidden">New Student</span>
    <% end %>
</section>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    
    <% @students.each do |student| %>
        
        <%
            is_active = student.current.to_s.downcase == 'true'
            status_text = is_active ? 'Active' : 'Inactive'
            status_class = is_active ? 'bg-green-100 text-green-800 border border-green-200' : 'bg-red-100 text-red-800 border border-red-200'
            
            total_lessons = student.lessons.count

            # Fetch Next Lesson (Future date, ordered asc)
            next_lesson = student.lessons.where('date > ?', Time.current).order(date: :asc).first
            
            # Formatted Next Lesson Data
            if next_lesson.present? && next_lesson.date.present?
                
                next_lesson_datetime = next_lesson.date
                
                # Check if the lesson is within the next 7 days
                is_this_week = next_lesson_datetime <= Time.current.end_of_week
                
                # Check if the lesson is today
                is_today = next_lesson_datetime.to_date == Time.current.to_date
                
                # Determine the date descriptor
                if is_today
                    next_lesson_descriptor = 'Today'
                elsif is_this_week
                    # For this week: Mon, Tue, etc.
                    next_lesson_descriptor = next_lesson_datetime.strftime("%a")
                else
                    # For lessons > 7 days away, show the date (DD/MM)
                    next_lesson_descriptor = next_lesson_datetime.strftime("%d %b") 
                end
                
                # Format the time
                next_lesson_time = next_lesson_datetime.strftime("%H:%M")
                
                # Combine into the final string
                next_lesson_display = "#{next_lesson_descriptor}, #{next_lesson_time}"
            else
                # Cleanly handle the 'not scheduled' or 'date is missing' case
                next_lesson_display = "Not scheduled"
            end

            # --- Subject processing (Unchanged) ---
            cleaned_subjects = (student.subjects || []).is_a?(Array) ? student.subjects : student.subjects.to_s.gsub(/["\[\]]/, '').split(',').map(&:strip)
            subject_list_display = cleaned_subjects.map(&:capitalize).join(', ')
        %>

        <div class="card-shadow bg-white p-6 rounded-2xl flex flex-col justify-between border border-gray-100 shadow-md">
            
            <div class="flex justify-between items-start mb-4">
                <div>
                    <h3 class="text-xl font-extrabold text-gray-900 mb-1">
                        <%= student.name %>
                    </h3>
                    
                    <div class="flex items-center text-sm text-gray-600 flex-wrap gap-x-3 gap-y-1">
                        
                        <%# Year Group %>
                        <div class="flex items-center">
                            <div class="icon mr-1 text-purple-600" data-lucide="graduation-cap" style="width: 16px; height: 16px;"></div>
                            <span class="font-medium">Year <%= student.year %></span>
                        </div>

                        <%# Subjects List %>
                        <div class="flex items-center">
                            <div class="icon mr-1 text-purple-600" data-lucide="book" style="width: 16px; height: 16px;"></div>
                            <span><%= subject_list_display %></span>
                        </div>
                    </div>
                </div>
                
                <span class="px-3 py-1 text-xs font-semibold rounded-full <%= status_class %> shadow-sm">
                    <%= status_text %>
                </span>
            </div>

            <div class="space-y-2 mb-6 text-sm text-gray-700">
                <div class="flex items-center">
                    <div class="icon mr-2 text-purple-600" data-lucide="mail" style="width: 16px; height: 16px;"></div>
                    <span><%= student.email %></span>
                </div>
                <div class="flex items-center">
                    <div class="icon mr-2 text-purple-600" data-lucide="phone" style="width: 16px; height: 16px;"></div>
                    <span><%= student.phone %></span>
                </div>
            </div>

            <div class="flex space-x-4 mb-6">
                <div class="flex-1 bg-purple-50 p-3 rounded-xl text-center">
                    <p class="text-xl font-bold text-purple-800"><%= total_lessons %></p>
                    <p class="text-xs text-purple-600">Total Lessons</p>
                </div>
                <div class="flex-1 bg-green-50 p-3 rounded-xl text-center">
                    <p class="text-md font-semibold text-green-700 <%= next_lesson_display == 'Not scheduled' ? 'text-gray-500' : '' %>">
                        <%= next_lesson_display %>
                    </p>
                    <p class="text-xs text-green-600">Next Lesson</p>
                </div>
            </div>

            <div class="flex space-x-3 pt-4 border-t border-gray-100">
                <%= link_to "View Details", student_path(student), class: "flex-1 px-4 py-2 text-sm font-semibold rounded-xl text-gray-700 border border-gray-300 hover:bg-gray-100 transition duration-150 text-center" %>
                <%= link_to "Schedule Lesson", new_lesson_path(student_id: student.id), class: "flex-1 px-4 py-2 text-sm font-semibold rounded-xl bg-purple-600 text-white shadow-md hover:bg-purple-700 transition duration-150 text-center" %>
            </div>
        </div>
        
    <% end %>

    <% if @students.empty? %>
        <div class="col-span-full">
            <p class="text-center text-gray-500 py-10">No students found. Click 'Add Student' to begin!</p>
        </div>
    <% end %>
</div>