<h1>All Lessons</h1>
<div class="table">
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Student</th>
            <th>Duration</th>
            <th>Subject</th>
            <th>Paid</th>
            <th>Homework</th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.name %></td>
              <td><%= lesson.date %></td>
              <td><%= lesson.duration %></td>
              <td><%= lesson.subject %></td>
              <td><%= lesson.paid %></td>
              <td><%= lesson.homework %></td>
              <td><%= button_to "Delete", lesson, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this Lesson ?"} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>