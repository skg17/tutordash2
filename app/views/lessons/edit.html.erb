<section class="mb-8">
    <%= link_to lesson_path(@lesson), class: "flex items-center text-lg font-semibold text-gray-700 hover:text-purple-600 transition duration-150 mb-4" do %>
        <div class="icon mr-2" data-lucide="arrow-left" style="width: 20px; height: 20px;"></div>
        <span class="text-sm uppercase tracking-wider">Back to Lesson Details</span>
    <% end %>

    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-1">Edit Lesson</h1>
    <p class="text-gray-500">Modify the details for the session with <%= @lesson.student&.name %>.</p>
</section>

<%# Render the form partial, explicitly setting the flag to lock student field %>
<%= render 'form', lesson: @lesson, students: @students, allow_student_edit: false %>