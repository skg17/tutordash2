<div class="auth-card">
    <div class="logo-area text-center mb-6">
        <div class="inline-block p-3 rounded-xl bg-purple-600/10 mb-2">
            <div class="icon text-purple-600" data-lucide="graduation-cap" style="width: 32px; height: 32px;"></div>
        </div>
        <h1 class="text-2xl font-bold text-gray-800">TutorDash</h1>
        <p class="text-sm text-gray-500">Manage your tutoring business with ease</p>
    </div>

    <div class="auth-tabs p-1 bg-purple-100/50 rounded-xl mb-6 flex justify-between">
        <%= link_to "Login", login_path, class: "flex-1 text-center py-2 text-sm font-semibold text-gray-600 hover:text-purple-700 transition duration-150" %>
        <span class="flex-1 text-center py-2 text-sm font-semibold rounded-lg bg-white shadow-sm text-purple-700">Sign Up</span>
    </div>

    <h2 class="text-xl font-bold mb-4">Create Account</h2>
    <p class="text-sm text-gray-500 mb-6">Fill in your details to sign up.</p>

    <% if @user.errors.any? %>
        <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg" role="alert">
            <p class="font-bold">Please correct the following errors:</p>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= form_with(model: @user, url: users_path, class: "space-y-4") do |form| %>
        <div>
            <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, placeholder: "Your Name", class: "w-full p-3 border-none rounded-xl bg-purple-100/50 text-gray-800 focus:ring-2 focus:ring-purple-500 focus:bg-white transition duration-150" %>
        </div>

        <div>
            <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, placeholder: "tutor@example.com", class: "w-full p-3 border-none rounded-xl bg-purple-100/50 text-gray-800 focus:ring-2 focus:ring-purple-500 focus:bg-white transition duration-150" %>
        </div>

        <div>
            <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :password, placeholder: "********", class: "w-full p-3 border-none rounded-xl bg-purple-100/50 text-gray-800 focus:ring-2 focus:ring-purple-500 focus:bg-white transition duration-150" %>
            <p class="text-xs text-gray-500 mt-1">Min. 8 chars, including uppercase, lowercase, number, and symbol.</p>
        </div>

        <div>
            <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :password_confirmation, placeholder: "********", class: "w-full p-3 border-none rounded-xl bg-purple-100/50 text-gray-800 focus:ring-2 focus:ring-purple-500 focus:bg-white transition duration-150" %>
        </div>

        <div>
            <%= form.label :sign_up_key, "Sign-up Key", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :sign_up_key, placeholder: "Enter the sign up key", class: "w-full p-3 border-none rounded-xl bg-purple-100/50 text-gray-800 focus:ring-2 focus:ring-purple-500 focus:bg-white transition duration-150" %>
        </div>

        <div class="pt-2">
            <%= form.submit "Sign Up", class: "w-full py-3 text-lg font-semibold rounded-xl bg-purple-600 text-white shadow-lg hover:bg-purple-700 transition duration-150 cursor-pointer" %>
        </div>
    <% end %>
</div>